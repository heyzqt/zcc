<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_main">

        <ImageView
            android:id="@+id/order_info_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@color/color_white"
            android:textSize="18dp" />
        <ImageView
            android:id="@+id/icon_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_delete"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/order_info_img"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/business_nz_fz6" />

            <RelativeLayout
                android:id="@+id/liner_center_name"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/color_white">

                <TextView
                    android:id="@+id/order_tv_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="商品名"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/order_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/order_tv_name1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="贰悫"
                    android:textColor="@color/light_969696"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_background" />

            <RelativeLayout
                android:id="@+id/liner_center_user"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/color_white">

                <TextView
                    android:id="@+id/order_tv_user1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="收货人"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/order_tv_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/order_tv_user1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="贰悫"
                    android:textColor="@color/light_969696"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_background" />

            <RelativeLayout
                android:id="@+id/liner_center_phone"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/color_white">

                <TextView
                    android:id="@+id/order_tv_phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="联系电话"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/order_tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/order_tv_phone1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="18408243864"
                    android:textColor="@color/light_969696"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_background" />

            <RelativeLayout
                android:id="@+id/liner_center_address"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/color_white">

                <TextView
                    android:id="@+id/order_tv_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="收货地址"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/order_tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/order_tv_address1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="四川省成都市郫县西华大学"
                    android:textColor="@color/light_969696"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_background" />

            <RelativeLayout
                android:id="@+id/liner_center_count"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/color_white">

                <TextView
                    android:id="@+id/order_tv_count1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="数量"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/order_tv_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/order_tv_count1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="x1"
                    android:textColor="@color/light_969696"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_background" />


            <RelativeLayout
                android:id="@+id/liner_center_price"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/color_white">

                <TextView
                    android:id="@+id/order_tv_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="价格"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/order_tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/order_tv_price1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="￥199.00"
                    android:textColor="@color/light_969696"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_background" />

            <RelativeLayout
                android:id="@+id/liner_center_sum_price"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/color_white">

                <TextView
                    android:id="@+id/order_tv_sum_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="实付款"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/order_tv_sum_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/order_tv_sum_price1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="￥ 199.00"
                    android:textColor="@color/light_969696"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_background" />

            <RelativeLayout
                android:id="@+id/liner_center_time"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/color_white">

                <TextView
                    android:id="@+id/order_tv_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="交易时间"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/order_tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/order_tv_time1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="2016-09-09"
                    android:textColor="@color/light_969696"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_background" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>