<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:minHeight="115dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/order_item_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/business_nz_fz4"></ImageView>

        <TextView
            android:id="@+id/order_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:lineSpacingExtra="8dp"
            android:layout_toRightOf="@+id/order_item_img"
            android:text="疯狂的书法家会计师的反馈的会计师费"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

        <View
            android:id="@+id/order_item_line"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_below="@+id/order_item_img"
            android:layout_marginTop="8dp"
            android:background="@color/color_stroke"></View>

        <TextView
            android:id="@+id/order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/order_item_line"
            android:layout_marginTop="8dp"
            android:text="共1件商品  实付款： ￥139.00"
            android:textColor="@color/color_black" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/order_item_img"
        android:background="@color/color_background"></View>
</LinearLayout>
