<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/check_circle"/>
    <ImageView
        android:id="@+id/img_business"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="50dp"
        android:src="@mipmap/business_mz_fs"/>


    <TextView
        android:id="@+id/tv_businessname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名"
        android:layout_toRightOf="@+id/img_business"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/tv_businessprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品价格"
        android:layout_toRightOf="@+id/img_business"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/tv_businessnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:text="x1"/>
</RelativeLayout>