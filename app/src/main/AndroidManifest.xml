        <activity
            android:name=".BusinessInfoActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".BusinessTypeActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".CollectManageActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".CreateOrderActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".CreateOrderSucceedOrFailedActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".OrderInfoActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".OrderManageActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".UserInfoActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".GuideActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".SearchActivity"
            android:screenOrientation="portrait"></activity>
    </application>
</manifest>